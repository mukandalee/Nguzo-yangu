            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textStyle="normal"
                android:text="1.Kifo chake x2 jamani Stephano yule mtu wa mungu, Stephano x2\n
Alipokuwa katika mateso Alikaza macho yake mbinguni\n
alisema mungu wasamehe kisha akakata roho"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textStyle="normal"
                android:text="2.Kwa ajili ya mateso mengi Stephano alilia machozi"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textStyle="normal"
                android:text="3.Akaona utukufu wa mungu mbingu zikafunguka mbele yake."                />



        </LinearLayout>
    </ScrollView>


</LinearLayout>