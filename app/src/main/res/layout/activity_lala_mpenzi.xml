<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="match_parent"
    tools:context=".LalaMpenzi">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:text="Lala Mpenzi"
                android:textSize="25sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="1.Lala mpenzi ulale salama,kazi duniani umemaliza, umerudi mbele zake mungu lala lala salama x2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:textStyle="bold|italic"
                android:text="   lala mpenzi-- lala lala salama\n
         umemaliza—lala lala salama\n
         ulale salama—lala lala salama"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="2.Mpenzi umelala kama mtoto mwema kazi duniani umemaliza , umerudi kwake baba mungu -lala lala salama x2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="3.Lala mpenzi ulale salama, baba mwenyezi amekuita  umerudi mbele zake mungu—lala lala salama x2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="4.Tuliobaki tujiulizeni,tutasema nini mbele zake bwana tumuabudu ili tukilala, tuwe tukipendeza x2 "
                />



        </LinearLayout>
    </ScrollView>


</LinearLayout>