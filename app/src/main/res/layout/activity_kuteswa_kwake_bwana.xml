                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textStyle="normal"
                android:text="3.Rohoni nimeoshwa kwa damu ya thamani, makosa ya yameoshwa naye mwokozi x2"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textStyle="normal"
                android:text="4.Ee Bw niongoze maishani mwangu, nifike nyumba yako leo na milele x2
"
                />



